{
  "compilerOptions": {
    "target": "es5",//编译成ES5
    "module": "esnext",//模块加载器
    "moduleResolution": "node", //模块解析方式
    "sourceMap": true, //把 ts 文件编译成 js 文件的时候，同时生成对应的 map 文件
    "emitDecoratorMetadata": true,//启用编译器
    "experimentalDecorators": true,//编译器选项
    "removeComments": false, //编译 js 的时候，删除掉注释
    "noImplicitAny": true,  //不需要隐含任何插件信息
    "suppressImplicitAnyIndexErrors": true, //编译出错后生成错误信息
    "strictFunctionTypes":false,
    "allowSyntheticDefaultImports":true,
    "typeRoots": [ "./node_modules/@types","./node_modules/vue/types","./node_modules/vue-router/types","./node_modules/vuex/types" ], //typings分析文件
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es2015"
    ]
  }
}
